        // Send periodic pings
        static mut last_ping_time: u64 = 0;
        unsafe {
            if current_time - last_ping_time > 1000 {
                last_ping_time = current_time;
                for i in 0..MAX_PLAYERS {
                    if i != self.local_player && self.connection_state[i] == ConnectionState::Playing {
                        self.send_ping(i).ok();
                    }
                }
            }
        }
