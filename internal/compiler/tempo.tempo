fn get_output_name(input: string, arg_count: i32) -> string {
    if (arg_count > 2) {
        return argv(2);
    }
    
    // Quitar extensiÃ³n .tempo
    let name = remove_extension(input);
    
    // En Windows agregar .exe
    if (is_windows()) {
        return concat(name, ".exe");
    }
    
    return name;
}

fn compile_file(input: string, output: string) -> i32 {
